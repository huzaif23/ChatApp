<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="@color/twiiter_col" />
            <gradient android:angle="-90" android:startColor="@color/twiiter_col" android:endColor="@color/twiiter_col"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#96d2f7" />
            <solid android:color="#96d2f7"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="@color/twiiter_col" />
            <gradient android:angle="-90" android:startColor="@color/twiiter_col" android:endColor="@color/twiiter_col" />
        </shape>
    </item>
</selector>